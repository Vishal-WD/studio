rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Logged in users can read their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      // Admins can read, write, and delete any user document
      allow read, write, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /posts/{postId} {
      // Anyone authenticated can read posts
      allow read: if request.auth != null;
      // Authenticated users can create posts for themselves
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
      // Author of the post can delete it
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
  }
}

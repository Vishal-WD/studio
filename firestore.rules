service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow users to read their own document
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow admins to read/write any user document
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the 'posts' collection
    match /posts/{postId} {
      // Allow users to read posts if the query is filtered by their department.
      // This rule is needed for LIST operations (queries).
      allow list: if request.auth != null &&
                     request.query.where.get('authorDepartment')[2] == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department;

      // Allow users to get a single post if they are in the same department.
      // This rule is needed for GET operations.
      allow get: if request.auth != null &&
                    resource.data.authorDepartment == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department;

      // Allow authenticated users to create a post for themselves
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;

      // Allow users to delete their own posts
      allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all reads/writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection rules
    match /users/{userId} {
      // Allow admins to perform any action on user documents
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Allow authenticated users to read their own document
      allow get: if request.auth.uid == userId;
    }

    // Posts collection rules
    match /posts/{postId} {
        // Allow authenticated users to read posts from their own department.
        allow read: if request.auth.uid != null 
                    && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department == resource.data.authorDepartment;

        // Allow authenticated users to create posts.
        // The client will ensure the correct authorDepartment is set.
        allow create: if request.auth.uid != null;

        // Allow users to delete their own posts.
        allow delete: if request.auth.uid == resource.data.authorId;
    }
  }
}
